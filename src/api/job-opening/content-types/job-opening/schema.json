{
  "kind": "collectionType",
  "collectionName": "job_openings",
  "info": {
    "singularName": "job-opening",
    "pluralName": "job-openings",
    "displayName": "Job Opening",
    "description": "Career opportunities and job listings"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": { "localized": true }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "pluginOptions": { "i18n": { "localized": true } }
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "department": {
      "type": "enumeration",
      "enum": ["Customer Service", "Operations", "Technology", "Quality Assurance", "Human Resources", "Sales", "Management"],
      "required": true
    },
    "location": {
      "type": "string",
      "required": true,
      "pluginOptions": { "i18n": { "localized": true } }
    },
    "jobType": {
      "type": "enumeration",
      "enum": ["Full-time", "Part-time", "Contract", "Remote"],
      "required": true
    },
    "summary": {
      "type": "text",
      "required": true,
      "pluginOptions": { "i18n": { "localized": true } }
    },
    "description": {
      "type": "richtext",
      "pluginOptions": { "i18n": { "localized": true } }
    },
    "requirements": {
      "type": "component",
      "repeatable": true,
      "component": "elements.list-item",
      "pluginOptions": { "i18n": { "localized": true } }
    },
    "responsibilities": {
      "type": "component",
      "repeatable": true,
      "component": "elements.list-item",
      "pluginOptions": { "i18n": { "localized": true } }
    },
    "benefits": {
      "type": "component",
      "repeatable": true,
      "component": "elements.list-item",
      "pluginOptions": { "i18n": { "localized": true } }
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "featured": {
      "type": "boolean",
      "default": false
    }
  }
}
